<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_nav_graph"
    app:startDestination="@id/weatherFragment">

    <fragment
        android:id="@+id/weatherFragment"
        android:name="com.diskin.alon.pagoda.weatherinfo.presentation.controller.WeatherFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_weather">
        <action
            android:id="@+id/action_weatherFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_weatherFragment_to_searchLocationFragment"
            app:destination="@id/searchLocationFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.diskin.alon.pagoda.settings.presentation.SettingsFragment"
        android:label="Settings" />
    <fragment
        android:id="@+id/searchLocationFragment"
        android:name="com.diskin.alon.pagoda.locations.presentation.controller.SearchLocationFragment"
        android:label=""
        tools:layout="@layout/fragment_search_location"/>

</navigation>